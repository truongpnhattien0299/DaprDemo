{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/DaprDemo.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/DaprDemo.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "run", "--project", "${workspaceFolder}/DaprDemo.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "appId": "shoppingcart",
      "appPort": 5226,
      "httpPort": 3500,
      "label": "dapr-debug",
      "type": "daprd",
      "dependsOn": "build"
    },
    {
      "appId": "shoppingcart",
      "label": "daprd-down",
      "type": "daprd-down"
    }
  ]
}
